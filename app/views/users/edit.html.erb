<main>
  <p id = "notice"><%= notice %></p>
  <div class='container'>
    <div class = "row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>User info</h1>
        <%= form_with model:@user, local:true do |f| %>
          <%= render 'books/error', model: @user %>
          <div class="form-group">
            <div class="user_name">Name</div>
            <%= f.text_field :name, class:"form-control name" %>
          </div>

          <div class="form-group">
            <label class="user_image">Image</label>
            <%= f.attachment_field :profile_image, class:"form-control-file user_image" %>
          </div>

          <div class="form-group">
            <label class="user_introduction">Introduction</label>
            <%= f.text_area :introduction, class:"form-control introduction" %><br>
          </div>

          <div class="form-group">
            <%= f.submit " Update User", class:"btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>